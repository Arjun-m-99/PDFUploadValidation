@{
}
<div class="container">
    @using (Html.BeginForm("Index", "FileUpload", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            <div class="form-group">
                <input type="file" class="form-control" name="uploadedFile" accept="application/pdf,application/vnd.ms-excel" />
            </div>
            <div class="form-group">
                <input type="submit" name="fileUpload" value="Upload" />
                @ViewBag.Message
            </div>
        </div>

    }
</div>